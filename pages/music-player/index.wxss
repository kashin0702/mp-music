/* pages/music-player/index.wxss */
page {
  color: #fff;
}
.back-img, .cover{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom:0;
  z-index: -1;
}
.cover {
  background-color: rgba(0, 0, 0, .5);
}
.back-img image {
  width: 100%;
  height: 100%;
  filter: blur(10rpx);
}

/* 主区域样式  思路： flex垂直布局 */
.swiper-item {
  /* swiper-item本身是绝对定位，要用padding撑开各item的距离 */
  padding: 0 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.album-img {
  flex: 4;
}
.album-img image {
  width: 100%;
  height: 100%;
}
.album-info {
  height: 150rpx;
}
.title {
  font-size: 34rpx;
  font-weight: 600;
}
.artist, .album {
  font-size: 28rpx;
}
.lyric {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.time {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.operation {
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.btn {
  width: 70rpx;
  height: 70rpx;
}
.btn-pause {
  width: 150rpx;
  height: 150rpx;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width:0;
  height:0;
  color:transparent;
}
/* 不要加逗号，表示同时拥有2个样式 */
.lyric-line.active {
  color: rgb(24, 219, 24);
  font-size: 32rpx;
  font-weight: 600;
}