<!--pages/home-music/index.wxml-->
<!-- background:外边框背景色 -->
<van-search
disabled
background="#fafafa"
shape="round"
bind:click-input="goSearch"
>
</van-search>
<view class="home-music">
 <!-- 动态计算swiper高度 -->
  <swiper style="height:{{ swiperHeight }}px ;"
  indicator-dots 
  circular
  autoplay
  interval="3000">
    <swiper-item wx:for="{{bannersList}}" wx:key="*this">
      <image src="{{item.pic}}" class="swiper-image" mode="widthFix" bindload="imageLoaded"></image>
    </swiper-item>
  </swiper>
</view>
