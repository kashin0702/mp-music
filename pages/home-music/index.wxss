/* pages/home-music/index.wxss */
page {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.van-search__content {
  /* 搜索栏背景色 */
  background-color: #fff!important;
} 
.swiper-image {
  width: 100%;
}
swiper {
  border-radius: 10rpx;
  overflow: hidden;
}

.ranking-item {
  display: flex;
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.ranking-item:first-child {
  margin-top: 20rpx;
}
.left-title {
  font-size: 36rpx;
  font-weight: 600;
}
.left-songs {
  font-size: 26rpx;
}
.left {
  padding: 15rpx;
  background-color: #f5f5f5;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.right {
  width: 250rpx;
  position: relative;
}
.right image {
  width: 100%;
  display: block;
}
.rank-count {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 22rpx;
  border-radius: 10rpx;
  padding: 5rpx;
}